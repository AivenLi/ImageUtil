<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragment.IEvaluatFragment"
    android:background="@drawable/splash_bg"
    android:id="@+id/fragment_evaluat"
    android:orientation="vertical"
    >
    <TextView
        android:id="@+id/tv_no_data"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="暂无数据"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:gravity="center"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:visibility="gone"
        >
        <ImageView
            android:id="@+id/img_source"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />
        <LinearLayout
            android:id="@+id/lyt_param"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true"
            android:background="#44000000"
            android:gravity="center"
            >
            <TextView
                android:id="@+id/tv_param1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="对比度：1234"
                android:textSize="@dimen/image_param_text"
                android:textColor="@color/white"
                android:gravity="center"
                />
            <TextView
                android:id="@+id/tv_param2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="对比度：1234"
                android:textSize="@dimen/image_param_text"
                android:textColor="@color/white"
                android:gravity="center"
                />
            <TextView
                android:id="@+id/tv_param3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="对比度：1234"
                android:textSize="@dimen/image_param_text"
                android:textColor="@color/white"
                android:gravity="center"
                />
        </LinearLayout>
    </RelativeLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        >
        <ListView
            android:id="@+id/list_enhance"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:divider="@null"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            />
        <LinearLayout
            android:id="@+id/lyt_handle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:visibility="gone"
            >
            <ProgressBar
                android:id="@+id/pgb_handle"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:indeterminateTint="@color/white"
                />
            <TextView
                android:id="@+id/tv_handle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/img_handle_param"
                android:textColor="@color/white"
                android:textSize="@dimen/image_param_text"
                />
        </LinearLayout>
    </FrameLayout>
</LinearLayout>